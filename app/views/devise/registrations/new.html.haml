.SignUp
  .SignUp__content
    %h2.registration アカウントを作成
    .RegistrationForm
      = form_for(@user, url: user_registration_path) do |f|
        = render "devise/shared/error_messages", resource: @user
        .field
          .FormLabel
            = f.label :name, '名前', class: "title"
            .MustMessage 必須
          = f.text_field :name, autofocus: true, autocomplete: "off", placeholder: "例) 山田太郎", class: "input input-default"
        .field
          .FormLabel
            = f.label :email, 'メールアドレス', class: "title"
            .MustMessage 必須
          = f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "PC・携帯どちらでも可", class: "input input-default"
        .field
          .FormLabel
            = f.label :password, 'パスワード', class: "title"
            .MustMessage 必須
          = f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length}文字以上の半角英数字", class: "input input-default"
          %p.attention ＊英字と数字の両方を含めて設定してください
        .field
          .FormLabel
            = f.label :password_confirmation, 'パスワードの再確認', class: "title"
            .MustMessage 必須
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length}文字以上の半角英数字", class: "input input-default"
          %p.attention ＊英字と数字の両方を含めて設定してください

        .actions
          = f.submit "次へ進む", class: "nextBtn"
          = link_to "ログイン", new_user_session_path, class: "Login"
